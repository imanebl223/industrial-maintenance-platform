generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  password      String
  role          String        @default("technicien") // rôle par défaut = technicien
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  interventions Intervention[]
}


model Machine {
  id            Int           @id @default(autoincrement())
  name          String
  location      String
  status        String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  maintenances  Maintenance[]
  interventions Intervention[]
}

model Maintenance {
  id         Int       @id @default(autoincrement())
  date       DateTime
  type       String
  machine    Machine   @relation(fields: [machineId], references: [id])
  machineId  Int
}

model Intervention {
  id        Int       @id @default(autoincrement())
  date      DateTime
  notes     String
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  machine   Machine   @relation(fields: [machineId], references: [id])
  machineId Int
}
